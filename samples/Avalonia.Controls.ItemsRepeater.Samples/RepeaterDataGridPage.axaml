<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Avalonia.Controls.Samples"
             x:Class="Avalonia.Controls.Samples.RepeaterDataGridPage"
             x:DataType="local:RepeaterDataGridPageViewModel">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Spacing="8" Margin="0 0 0 12">
      <TextBlock Classes="h2">RepeaterDataGrid with SelectingItemsRepeater rows.</TextBlock>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:Name="randomizeHeights">Randomize Heights</Button>
        <TextBlock Text="Row and cell selection supported."
                   VerticalAlignment="Center" />
      </StackPanel>
    </StackPanel>

    <RepeaterDataGrid x:Name="grid"
                      ItemsSource="{Binding Items}"
                      RowHeightBindingPath="Height"
                      SelectionMode="Multiple"
                      AutoMeasureRowLimit="200">
      <RepeaterDataGrid.Columns>
        <RepeaterDataGridColumn Header="#" Width="Auto" MinWidth="70" BindingPath="Id" />
        <RepeaterDataGridColumn Header="Name" Width="2*" BindingPath="Name" />
        <RepeaterDataGridColumn Header="Category" Width="*" BindingPath="Category" />
        <RepeaterDataGridColumn Header="Price" Width="90" BindingPath="Price" />
        <RepeaterDataGridColumn Header="Stock" Width="Auto" BindingPath="Stock" />
      </RepeaterDataGrid.Columns>
    </RepeaterDataGrid>
  </DockPanel>
</UserControl>
